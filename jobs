local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local function removeClothesAndAccessories(character)
    for _, item in ipairs(character:GetChildren()) do
        if item:IsA("Shirt") or item:IsA("Pants") or item:IsA("ShirtGraphic") 
           or item:IsA("Accessory") or item:IsA("Hat") then
            item:Destroy()
        end
    end
end

-- Проверка всех игроков каждое кадро
RunService.RenderStepped:Connect(function()
    for _, player in ipairs(Players:GetPlayers()) do
        if player.Character then
            removeClothesAndAccessories(player.Character)
        end
    end
end)

-- Авто удаление при спавне нового персонажа
Players.PlayerAdded:Connect(function(player)
    player.CharacterAdded:Connect(function(char)
        task.wait(0.1)
        removeClothesAndAccessories(char)
    end)
end)

print("Бесконечное удаление одежды и аксессуаров активно!")
